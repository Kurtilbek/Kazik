<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroud">

    <TextView
        android:id="@+id/Text_4"
        android:layout_width="138dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="10000"
        android:textColor="@color/text_color"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/money"
        android:layout_width="138dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toStartOf="@+id/Text_4"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"
        android:text="@string/balance"
        android:textColor="@color/text_color"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_1000_n_1500_n_4"
        android:drawableStart="@drawable/baseline_info_24"
        android:drawablePadding="8dp"
        android:textColor="@color/text_color"
        android:textSize="17dp"
        android:background="@drawable/text_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/con1"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/generate">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:rowCount="3"
            android:columnCount="3">

            <TextView
                android:id="@+id/_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:background="@drawable/style_cigan"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:gravity="center"
                android:onClick="tob1"
                android:textColor="#5A5A5A"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="1"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob2"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="2"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob3"
                android:layout_margin="10dp"/>


            <TextView
                android:id="@+id/_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="0"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob4"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="1"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob5"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="1"
                android:layout_column="2"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob6"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="0"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob7"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="1"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob8"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/_9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="2"
                android:layout_column="2"
                android:foreground="@mipmap/ic_crystal_pomenshe_foreground"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#5A5A5A"
                android:background="@drawable/style_cigan"
                android:gravity="center"
                android:onClick="tob9"
                android:layout_margin="10dp"/>

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/generate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/style_cigan"
        android:gravity="center"
        android:onClick="Vichislenia"
        android:text="@string/Generate"
        android:textColor="#5A5A5A"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>